{{>header}}
{{>sidebar}}
{{>navbar}}

<div class="container-fluid d-flex justify-content-center">
    <div class="card shadow mb-4 w-50">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">{{title}}</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align: center;">
                            <th>Genre</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each types}}
                        <tr>
                            <td style="text-align: center; vertical-align: middle;">{{this.name}}</td>
                            <td>
                                {{#if ../isLogin}}
                                <div class="text-end mb-2">
                                    <a href="/edit-type/{{this.id}}" class="btn-edit"><img src="/public/icons/edit.svg" alt=""></a>
                                    <a href="/delete-type/{{this.id}}" class="btn-delete"><img src="/public/icons/delete.svg" alt=""></a>
                                </div>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{{>footer}}