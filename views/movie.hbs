{{>header}}
{{>sidebar}}
{{>navbar}}



<div class="container-fluid ">
    {{#if user.is_admin}}
    <div class="text-end mb-2">
        <a href="/edit-movie/{{movie.id}}" class="btn-edit"><img src="/public/icons/edit.svg" alt=""></a>
        <a href="/delete-movie/{{movie.id}}" class="btn-delete"><img src="/public/icons/delete.svg" alt=""></a>
    </div>
    {{/if}}
    <div class="card shadow mb-4 ">
        <div class="card-header py-3">
            <h1 class="m-0 font-weight-bold text-primary">{{movie.name}}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <img src="{{movie.photo}}" alt="" class="img-movie-show">
                </div>
                <div class="col-lg-6">
                    <div class="detail-movie">
                        <p class="mt-3 mb-3" style="text-align: justify;">{{movie.synopsis}}</p>
                        <h6>Direction: {{movie.director}}</h6>
                        <h6>Cast: {{movie.cast}}</h6>
                        <h6>Genre: {{movie.genre}}</h6>
                        <h6>Duration: {{movie.movie_hours}}</h6>
                    </div>
                </div>
                <div class="form-group mt-3">
                <a href="/addTicket/{{movie.id}}" class="btn btn-primary btn-user btn-block">
                    Booking Ticket
                </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}