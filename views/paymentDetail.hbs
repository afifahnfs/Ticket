{{>header}}
{{>sidebar}}
{{>navbar}}

<div class="container-fluid d-flex justify-content-center">
        <div class="card shadow mb-4 w-50">
            <div class="card-header py-3">
                <h1 class="m-0 font-weight-bold text-primary">{{title}}</h1>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tr>
                            <th>Tiket Code:</th>
                            <td>{{payment.kode_tiket}}</td>
                        </tr>
                        <tr>
                            <th>Name:</th>
                            <td>{{payment.name}}</td>
                        </tr>
                        <tr>
                            <th>Movie:</th>
                            <td>{{payment.title_movie}}</td>
                        </tr>
                        <tr>
                            <th>Price:</th>
                            <td>Rp.{{payment.price}}</td>
                        </tr>
                        <tr>
                            <th>Amount:</th>
                            <td>{{payment.amount}}</td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td>Rp.{{payment.sub_total}}</td>
                        </tr>
                    </table>
                </div>
                <button href="" class="btn btn-success btn-user btn-block"> Buy </button>
                <a href="/edit-payment/{{payment.id}}" class="btn btn-primary btn-user btn-block">Back</a>
                <a href="/delete-payment/{{payment.id}}" class="btn btn-danger btn-user btn-block">Cancelled</a>
            </div>
        </div>
</div>

{{>footer}}